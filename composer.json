{
    "name": "api-clients/psr7-oauth1",
    "description": "Client-side PSR-7 Oauth1 request signer for PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com"
        },
        {
            "name": "Beau Simensen",
            "email": "beau@dflydev.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "ext-hash": "^7.4 || ^8",
        "psr/http-message": "^1.0.1",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.8.2",
        "wyrihaximus/async-test-utilities": "^3.4.24"
    },
    "config": {
        "platform": {
            "php": "7.4.7"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "ApiClients\\Tools\\Psr7\\Oauth1\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApiClients\\Tests\\Tools\\Psr7\\Oauth1\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ]
    }
}
